@model VDOEasy.Models.HomeViewModel
@{
}
<div class="modal fade" id="editModalCenter" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <form asp-controller="Home" asp-action="UpdateMember" class="modal-content" method="post">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add Member</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row" id="addMemberForm">
                    <div class="col-6">
                        <div class="d-flex flex-column" style="gap:1rem">
                            <div class="d-flex align-items-center gap-5">
                                <div class="row align-items-center">
                                    <label class="m-0 col-5">Branch:</label>
                                    <select asp-items="Model.Branches" class="form-select col">
                                    </select>
                                </div>
                                <div class="row align-items-center">
                                    <label class="m-0 col-3">Date:</label>
                                    <input class="col form-control" value="@DateTime.Today.ToShortDateString()" readonly />
                                </div>
                            </div>

                            <div class="row align-items-center">
                                <label class="m-0 col-2">ID:</label>
                                <input class="col form-control" type="number" asp-for="Id" readonly/>
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>

                            <div class="d-flex align-items-center justify-content-between gap-3">
                                <div class="d-flex align-items-center gap-1">
                                    <label class="m-0" style="min-width: fit-content">First Name:</label>
                                    <input class="form-control" type="text" id="textFirstname" asp-for="FirstName" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="d-flex align-items-center gap-1">
                                    <label class="m-0" style="min-width: fit-content">Last Name:</label>
                                    <input class="form-control" type="text" id="textLastname" asp-for="LastName" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row align-items-center">
                                <label class="m-0 col-2">ID Card:</label>
                                <input class="col form-control" type="number" asp-for="IdcardNumber" />
                                <span asp-validation-for="IdcardNumber" class="text-danger"></span>
                            </div>

                            <div class="row align-items-center">
                                <label class="m-0 col-2">Address:</label>
                                <textarea class="col form-control" id="textAddress" asp-for="Address"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="row align-items-center">
                                <label class="m-0 col-2">Birthdate:</label>
                                <input class="col form-control" type="date" id="birthdate" required asp-for="Birthdate" />
                                <span asp-validation-for="Birthdate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="d-flex flex-column ps-2" style="gap:1rem">
                            <div class="row align-items-center text-nowrap">
                                <label class="m-0 col-2">Member Type:</label>
                                @foreach (var item in Model.MemberTypes)
                                {
                                    <div class="form-check">
                                        <input type="radio" id="@item.Name" name="memberType" value="@item.Id" class="form-check-input" required checked="@item.Id.Equals(Model.MemberTypeId)"/>
                                        <label for="test1" class="form-check-label">@item.Name</label>
                                    </div>
                                }
                            </div>

                            <div class="row align-items-center text-nowrap">
                                <label class="m-0 col-2">Favourtie Genre:</label>
                                @foreach (var item in Model.MoviesTypes)
                                {
                                    <div class="form-check">
                                        <input type="checkbox" id="@item.Name" name="movieType" value="@item.Id" class="form-check-input" required checked='@Model.UserMovieTypes.Any(x => x == item.Id)'/>
                                        <label for="test1" class="form-check-label">@item.Name</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="saveChangesBtn">Save changes</button>
            </div>
        </form>
    </div>
</div>